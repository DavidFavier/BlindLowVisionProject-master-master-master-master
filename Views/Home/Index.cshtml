@model IEnumerable<Customer>

@{ 
    ViewBag.Title = "Customer List";
}


    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>@customer.Department</td>
                </tr>
            }
        </tbody>
    </table>


